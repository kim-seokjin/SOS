# ==========================================
# Project Configuration
# ==========================================
PROJECT_NAME="SOS: Save Our Special day"
TZ=Asia/Seoul

# ==========================================
# Backend Service Configuration
# ==========================================
# Server Settings
BACKEND_PORT=8000
SOS_API_PREFIX=/api/v1
SECRET_KEY=change_this_to_a_secure_random_string_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Logging
# Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Set to True for JSON logs (Production), False for Text logs (Development)
LOG_JSON_FORMAT=False

# Database Connection Info
# =================================================================
# [RECOMMENDED] For Local Development (SQLite)
# No additional setup required. Creates a local file database.
DATABASE_URL="sqlite+aiosqlite:///./data/sos.db"

# [OPTION] For Production / Docker (PostgreSQL)
# Uncomment the line below to use PostgreSQL instead of SQLite
# DATABASE_URL=postgresql+asyncpg://sosuser:sospassword@localhost:5432/sosdb
# Required for Docker environment:
POSTGRES_USER=sosuser
POSTGRES_PASSWORD=sospassword
POSTGRES_DB=sosdb
POSTGRES_VERSION=15-alpine
# =================================================================

# DB_HOST: Set to 'db' for Docker, 'localhost' for local development
DB_HOST=db
DB_PORT=5432

# Redis Configuration
# Used by both Docker (for container setup) and Backend (for connection)
REDIS_VERSION=alpine
# REDIS_HOST: Set to 'redis' for Docker, 'localhost' for local development
REDIS_HOST=redis
REDIS_PORT=6379

# REDIS_URL:
# For Docker: Constructed automatically in docker-compose.yml
# For Local Run: Uncomment the line below
# REDIS_URL=redis://localhost:6379/0

# AWS S3 Configuration
# NOTE: Currently REQUIRED for game initialization. Planned to be made optional in future.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET_NAME=

# Hidden Messages (JSON formatted string list)
HIDDEN_MESSAGES=["숨겨진 메시지입니다!", "또 다른 메시지입니다."]

# ==========================================
# Frontend Service Configuration
# ==========================================
FRONTEND_PORT=3000
# Vite Environment Variables (Must start with VITE_)
# Set to the public URL of the backend API
VITE_API_URL=http://localhost:8000/api/v1
